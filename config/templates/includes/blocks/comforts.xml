<properties xmlns="http://schemas.sulu.io/template/template"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <block name="blocks" default-type="comforts">
        <types>
            <type name="comforts">
                <meta>
                    <title lang="en">Comforts</title>
                </meta>

                <properties>
                    <property name="title" type="text_line">
                        <meta>
                            <title lang="en">Title</title>
                        </meta>
                    </property>

                    <property name="backgroundImage" type="single_media_selection" mandatory="true">
                        <meta>
                            <title lang="en">Background Image</title>
                        </meta>
                    </property>

                    <block name="comforts" default-type="item" >
                        <meta>
                            <title lang="en">Comfort items</title>
                        </meta>

                        <types>
                            <type name="item">
                                <meta>
                                    <title lang="en">Item block</title>
                                </meta>

                                <properties>
                                    <property name="icon" type="single_media_selection">
                                        <meta>
                                            <title lang="en">Image</title>
                                        </meta>
                                    </property>

                                    <property name="title" type="text_line" mandatory="true">
                                        <meta>
                                            <title lang="en">Title</title>
                                        </meta>
                                    </property>

                                    <property name="description" type="text_editor">
                                        <meta>
                                            <title lang="en">Description</title>
                                        </meta>
                                    </property>
                                </properties>
                            </type>
                        </types>
                    </block>

                    <property name="sectionId" type="text_line" colspan="3">
                        <meta>
                            <title lang="en">Section Id</title>
                        </meta>
                    </property>
                </properties>
            </type>
        </types>
    </block>
</properties>
