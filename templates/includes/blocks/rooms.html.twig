{# SECTION: ROOMS #}
<section class="section section-room" {% if content.sectionId|default %}id="{{ content.sectionId }}"{% endif %}>
    <div class="container">
        <div class="row">
            <div class="col-12">
                {% if content.title|default %}
                    <h2 class="room__heading">{{ content.title }}</h2>
                {% endif %}
                <div class="room__tabs swiper-pagination" id="roomTabs"></div>
            </div>
        </div>

        <div class="room position-relative" id="roomWrapper">
            <div class="room__vprogress" aria-hidden="true">
                <span class="room__vbar"></span>
            </div>

            <div class="room__slider swiper" id="room-swiper" data-room-labels='{{ content.rooms|default([])|map(r => r.title)|json_encode|e('html_attr') }}'>
                <div class="swiper-wrapper">
                    {% for item in content.rooms|default([]) %}
                        <div class="swiper-slide room__slide">
                            <div class="row room__row">
                                <div class="col-12 col-lg-5">
                                    <h3 class="room__title">{{ item.title }}</h3>
                                    {% if item.description|default %}
                                        <div class="room__desc">
                                            {{ item.description|raw }}
                                        </div>
                                    {% endif %}
                                    <div class="room__badge">
                                        {% if item.size|default %}
                                            <div class="room__badge-value">{{ item.size|raw }}</div>
                                        {% endif %}
                                        {% if item.text|default %}
                                            <div class="room__badge-label">{{ item.text }}</div>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-12 col-lg-6">
                                    {% if item.image|default %}
                                        <div class="room__media">
                                            <img class="room__image" src="{{ item.image.url }}" alt="{{ item.title }}" loading="lazy" decoding="async" />
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>

            <div class="room__hprogress" aria-hidden="true">
                <span class="room__hbar" style="width: {{ content.rooms|default([])|length > 0 ? (100 / (content.rooms|length)) : 0 }}%"></span>
            </div>
        </div>
    </div>
</section>