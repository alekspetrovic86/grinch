{# BLOCK: GALLERY #}
<section class="section section-gallery" {% if content.sectionId|default %}id="{{ content.sectionId }}"{% endif %}>
    <div class="container">
        {% if content.title|default %}
            <h2 class="gallery__heading">{{ content.title }}</h2>
        {% endif %}

        <div class="gallery__slider swiper">
            <div class="swiper-wrapper">
                {% for key, item in content.images|default([]) %}
                    <a
                        href="{{ item.url }}"
                        class="swiper-slide gallery__tile gallery__tile--view gallery__lightbox"
                        data-gallery="{{ content.sectionId|default('gallery-' ~ loop.index) }}"
                        aria-label="Open image {{ key + 1 }}">
                        <img class="gallery__img" src="{{ item.url }}" alt="Gallery image {{ key }}" loading="lazy" decoding="async" />
                        <span class="gallery__overlay">
                            <i class="bi bi-camera"></i>
                            <em>{{ content.overlayText|default }}</em>
                        </span>
                    </a>
                {% endfor %}
            </div>
        </div>

        <div class="gallery__nav">
            <button class="gallery__arrow gallery__prev" type="button" aria-label="Previous">
                <i class="bi bi-chevron-left"></i>
            </button>
            <button class="gallery__arrow gallery__next" type="button" aria-label="Next">
                <i class="bi bi-chevron-right"></i>
            </button>
        </div>

        {# <a href="#gallery" class="gallery__more">View All <i class="bi bi-arrow-right-short"></i></a> #}
    </div>
</section>