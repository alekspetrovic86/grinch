{# BLOCK: FLOORPLANS #}
<section class="section section-floorplans" {% if content.sectionId|default %}id="{{ content.sectionId }}"{% endif %}>
    <div class="container">
        <div class="row floorplans__head align-items-end">
            <div class="col-12 col-lg-6">
                {% if content.title|default %}
                    <h2 class="floorplans__title">{{ content.title }}</h2>
                {% endif %}
            </div>
            <div class="col-12 col-lg-6">
                {% if content.description|default %}
                    <div class="floorplans__intro">
                        {{ content.description|raw }}
                    </div>
                {% endif %}
            </div>

            <div class="col-12">
                <hr class="floorplans__divider" />
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="floorplans__stats {% if not content.media|default %}floorplans__stats-without-video{% endif %}">
                    {% for item in content.rooms|default([]) %}
                        <div class="floorplans__stat">
                            {% if item.size|default %}
                                <div class="floorplans__value">{{ item.size|raw }}</div>
                            {% endif %}
                            {% if item.title|default %}
                                <div class="floorplans__label">{{ item.title }}</div>
                            {% endif %}
                        </div>

                        {% if not loop.last %}
                            <span class="floorplans__sep" aria-hidden="true"></span>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>

    {# <div class="floorplans__video-bleed">
        <div class="floorplans__video" data-ytembed data-video-id="aqz-KE-bpKQ" data-title="Apartment Walkthrough">
            <img class="floorplans__poster" src="assets/img/hero-image.jpg" alt="" loading="lazy" decoding="async" />
            <button class="floorplans__play" type="button" aria-label="Play video">
                <i class="bi bi-play-fill"></i>
            </button>
        </div>
    </div> #}

    <div class="floorplans__video-bleed">
        {% if content.media|default and content.media.type.name == 'image' %}
            <div class="floorplans__video-image-wrapper">
                <img class="floorplans__video-image" src="{{ content.media.url }}" alt="">
            </div>
        {% elseif content.media|default and content.media.type.name == 'video' %}
            <div class="floorplans__video" data-video>
                <video class="floorplans__player" preload="none" playsinline controls>
                    <source src="{{ content.media.url }}" type="video/mp4">
                </video>
                {% if content.videoBackground|default %}
                    <img class="floorplans__poster" src="{{ content.videoBackground.url }}" alt="" loading="lazy" decoding="async" />
                {% endif %}
                <button class="floorplans__play" type="button" aria-label="Play video">
                    <i class="bi bi-play-fill"></i>
                </button>
            </div>
        {% endif %}
    </div>
</section>