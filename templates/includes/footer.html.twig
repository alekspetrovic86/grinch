{# FOOTER #}
<footer class="footer">
    <div class="container-fluid">
        <div class="footer-wrapper">
            <div class="footer-left">
                {% if footerInfo.logo|default %}
                    <div class="footer-logo">
                        <img src="{{ footerInfo.logo.url }}" alt="Monos">
                    </div>
                {% endif %}
                {% if footerInfo.footerLeftItems|default([])|length > 0 %}
                    <div class="footer-links">
                        {% for item in footerInfo.footerLeftItems %}
                            <a {% if loop.first %}class="footer-link-first"{% endif %} href="{{ item.link }}">{{ item.title }}</a>
                        {% endfor %}
                    </div>
                {% endif %}
            </div>
            <div class="footer-right">
                {% if footerInfo.footerRightItems|default([])|length > 0 %}
                    <div class="footer-items">
                        {% for item in footerInfo.footerRightItems %}
                            <a href="{{ item.link }}">{{ item.title }}</a>
                        {% endfor %}
                    </div>
                {% endif %}
                {% if footerInfo.text|default %}
                    <div class="footer-text">{{ footerInfo.text }}</div>
                {% endif %}
                <div class="footer-credentials">
                    {{ 'app.site.by'|trans }} <a href="mailto:alekspatrovic86@gmail.com">{{ 'app.alex'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
</footer>